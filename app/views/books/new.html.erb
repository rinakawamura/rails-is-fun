<h1>New Author</h1>
<br>
<% if flash[:error] %>
    <% flash[:error].each do |err| %>
        <%= err %><br>
    <% end %>
    <% flash[:error] = nil %>
    <br><br>
<% end %>

<%= form_for @author do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :birth_year %>
    <%= f.text_field :birth_year %><br><br>
    <%= f.submit %>
<% end %>
